@inproceedings{10.1145/3117811.3131249,
author = {Boubrima, Ahmed and Bechkit, Walid and Rivano, Herv\'{e} and Soulhac, Lionel},
title = {Poster: Toward a Better Monitoring of Air Pollution Using Mobile Wireless Sensor Networks},
year = {2017},
isbn = {9781450349161},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3117811.3131249},
