@inproceedings{10.1145/3241539.3241540,
author = {Lu, Chris Xiaoxuan and Li, Yang and Zhao, Peijun and Chen, Changhao and Xie, Linhai and Wen, Hongkai and Tan, Rui and Trigoni, Niki},
title = {Simultaneous Localization and Mapping with Power Network Electromagnetic Field},
year = {2018},
isbn = {9781450359030},
