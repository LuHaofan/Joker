@inproceedings{10.1145/3241539.3267781,
author = {Ravichandran, Arunkumar and Jain, Ish Kumar and Hegazy, Rana and Wei, Teng and Bharadia, Dinesh},
title = {Facilitating Low Latency and Reliable VR over Heterogeneous Wireless Networks},
year = {2018},
isbn = {9781450359030},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
