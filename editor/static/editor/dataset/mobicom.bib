@inproceedings{10.1145/3117811.3117812,
author = {Alay, \"{O}zg\"{u} and Lutu, Andra and Pe\'{o}n-Quir\'{o}s, Miguel and Mancuso, Vincenzo and Hirsch, Thomas and Evensen, Kristian and Hansen, Audun and Alfredsson, Stefan and Karlsson, Jonas and Brunstrom, Anna and Safari Khatouni, Ali and Mellia, Marco and Marsan, Marco Ajmone},
