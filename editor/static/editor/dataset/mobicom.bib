}

@inproceedings{10.1145/3241539.3267764,
author = {Sahoo, Kshira Sagar and Tiwary, Mayank and Sahoo, Sampa and Nambiar, Rohit and Sahoo, Bibhudatta and Dash, Ratnakar},
title = {A Learning Automata-Based DDoS Attack Defense Mechanism in Software Defined Networks},
year = {2018},
isbn = {9781450359030},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3241539.3267764},
