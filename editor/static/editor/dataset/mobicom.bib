@inproceedings{10.1145/3117811.3119870,
author = {Sur, Sanjib and Pefkianakis, Ioannis and Zhang, Xinyu and Kim, Kyu-Han},
title = {Demo: WiFi-Assisted 60 GHz Wireless Networks},
year = {2017},
