@inproceedings{10.1145/3452296.3472936,
author = {Eliyahu, Tomer and Kazak, Yafim and Katz, Guy and Schapira, Michael},
title = {Verifying Learning-Augmented Systems},
year = {2021},
isbn = {9781450383837},
